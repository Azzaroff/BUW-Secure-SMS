<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SMSContactListActivity" >

    <Button
        android:id="@+id/sms_contact_list_panic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:text="@string/panic_button_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sms_contact_label_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sms_contacts_label_text" />

        <ListView
            android:id="@+id/sms_contact_contacts_list"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/sms_contact_btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dip"
            android:text="@string/write_sms_btn_write" />
    </LinearLayout>

</LinearLayout>